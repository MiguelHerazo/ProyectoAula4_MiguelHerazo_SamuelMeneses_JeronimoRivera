@model List<IdeaNegocioModel>

<!DOCTYPE html>
<html>
<head>
    <title>Ideas de Negocio con Ingresos Mayores al Promedio</title>
</head>
<body>
    <h1>Ideas de Negocio con Ingresos Mayores al Promedio</h1>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var idea in Model)
                {
                    <tr>
                        <td>@idea.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay ideas de negocio con ingresos mayores al promedio.</p>
    }

    <div>
        @Html.ActionLink("Volver a la Lista de Ideas de Negocio", "MostrarIdeaNegocio")
    </div>
</body>
</html>
